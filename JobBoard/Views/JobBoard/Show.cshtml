@using System;
@using JobBoard.Models;
@model JobBoard.Models.JobOpening

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Job Board Application!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>Job Opening Details</h1>
        <hr> <br>

        <h2>Job Title: @Model.JobTitle</h2>
        <p>Job ID: @Model.JobOpeningId</p>

        <div>
            <h3>Job Description</h3>
            <p>@Model.JobDescription</p>
        </div>

        <div>
            <h3>Job Poster's Contact Details</h3>
            <ul>
                <li>Name: @Model.JobContactInfo.Name</li>
                <li>Email: @Model.JobContactInfo.Email</li>
                <li>Phone Number: @Model.JobContactInfo.PhoneNumber</li>
            </ul>
        </div>

        <div>
            <a class="btn btn-primary" href='/jobboard/new'>Add Another Job Opening</a>
            <a class="btn btn-secondary" href='/jobboard'>View All Job Openings</a>
        </div>
    </div>

    <!-- Include Bootstrap JS and other scripts if needed -->
</body>
</html>
