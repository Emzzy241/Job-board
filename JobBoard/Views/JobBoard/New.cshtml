@using JobBoard.Models
@using System;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>JobBoard Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
            text-align: center;
        }
        h2 {
            color: #007bff;
        }
        form {
            max-width: 600px;
            margin: 0 auto;
        }
        label {
            font-weight: bold;
            margin-top: 10px;
        }
        .form-control {
            margin-bottom: 15px;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>Enter the details of the Job you want to add</h2>
    <br>
    <br>
    <form action="/jobboard" method="post">
        <label for="newJobTitle">Add your Job's Title:</label>
        <input class="form-control" id="newJobTitle" name="newJobTitle" type="text" placeholder="e.g: Software Developer" required>

        <label for="newJobDescription">Add your Job's Description:</label>
        <textarea class="form-control" name="newJobDescription" id="newJobDescription" cols="30" rows="10" placeholder="e.g: We need a software developer who is agile and ready to give his all...." required></textarea>

        <label for="jobPosterName">Name of the Job Poster:</label>
        <input class="form-control" id="jobPosterName" name="jobPosterName" type="text" placeholder="e.g: Mojiboye Emmanuel" required>

        <label for="jobPosterMail">Email Address of the Job Poster:</label>
        <input class="form-control" id="jobPosterMail" name="jobPosterMail" type="email" placeholder="e.g: emzzyoluwole@gmail.com" required>

        <label for="jobPosterNumber">Phone Number of the Job Poster:</label>
        <input class="form-control" id="jobPosterNumber" name="jobPosterNumber" type="text" placeholder="e.g: +234-9012857304" required>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-QROff/zFia7xYBDD5bAva7DmMjMRRXMpMpSM2G/94ZFQvSH93aM+ywCt2ZE32S9o" crossorigin="anonymous"></script>
</body>
</html>
