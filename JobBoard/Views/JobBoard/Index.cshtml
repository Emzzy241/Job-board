@using JobBoard.Models
@using System;
@using System.Collections.Generic;
@model List<JobBoard.Models.JobOpening>
@* @model List<JobOpening> *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Job Board Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
            text-align: center;
        }
        h1 {
            color: #007bff;
        }
        .btn-dark, .btn-danger {
            background-color: #343a40;
            border-color: #343a40;
        }
        .btn-dark:hover, .btn-danger:hover {
            background-color: #292b2c;
            border-color: #292b2c;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            margin-bottom: 10px;
        }
        a {
            text-decoration: none;
            color: #007bff;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Here is a List of Jobs you have added</h1>
    <br><br>

    @* In this version, I added a null check (if (Model != null)) before attempting to access the Count property. If Model is null, it will not attempt to access the Count property and should prevent the RuntimeBinderException. *@
    @if (Model != null && Model.Count > 0)
    {
        <ul>
            @foreach (JobOpening myJobOpening in Model)
            {
                <li>
                    <a href="/jobboard/@myJobOpening.JobOpeningId">
                        <b>@myJobOpening.JobTitle and the Id of Job is: @myJobOpening.JobOpeningId</b>
                         
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>The List of Job Openings is empty</p>
    }

    <p>What would you like to do next:</p>
    <a href="jobboard/new" class="btn btn-dark">Add Job</a>
    <a href="/" class="btn btn-dark">Home</a>
    <br>
    <br>

    <form action="jobboard/delete" method="get">
        <button class="btn btn-danger" type="submit">Clear All</button>
    </form>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-QROff/zFia7xYBDD5bAva7DmMjMRRXMpMpSM2G/94ZFQvSH93aM+ywCt2ZE32S9o" crossorigin="anonymous"></script>
</body>
</html>
